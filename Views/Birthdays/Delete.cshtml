@model Pozdravlyator.Models.Birthday
@{
    ViewData["Title"] = "Удалить день рождения";
}
<h1>Удалить день рождения</h1>
<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">Имя</dt>
        <dd class = "col-sm-10">@Model.Name</dd>
        <dt class = "col-sm-2">Дата</dt>
        <dd class = "col-sm-10">@Model.Date.ToString("dd.MM.yyyy")</dd>
        <dt class = "col-sm-2">Комментарий</dt>
        <dd class = "col-sm-10">@Model.Comment</dd>
        <dt class = "col-sm-2">Фото</dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Model.PhotoPath" alt="Фото" width="80" height="80" style="object-fit:cover; border-radius:50%;" />
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div> 